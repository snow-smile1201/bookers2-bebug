<% book.book_comments.each do |book_comment| %>
<td>
  <%= link_to(book_comment.user) do %>
    <%= image_tag book_comment.user.get_profile_image, size:"50x50" %><br>
    <%= book_comment.user.name %>
  <% end %>
</td>
<td>
  <%= book_comment.comment %>
</td>
  <% if book_comment.user == current_user %>
<td>
  <%= link_to "Destroy", book_book_comment_path(book, book_comment), method: :delete, class:"btn btn-sm btn-danger", remote: true, data: {"turbolinks" => false} %>
</td>
  <% end %>
<% end %>